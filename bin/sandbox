#!/bin/sh

if [ $1 == "forge" ]; then
  if [ $2 == "start" ]; then
    echo "Starting Forge sandbox"
    VBoxHeadless --startvm "Forge sandbox" &
  elif [ $2 == "ssh" ]; then
    echo "TOOD: Add ssh method to login"
  fi
elif [ $1 == "aws" ]; then
  if [ $2 == "start" ]; then
    echo "Starting AWS sandbox"
    VBoxHeadless --startvm "AWS sandbox" &
  elif [ $2 == "ssh" ]; then
    echo "TOOD: Add ssh method to login"
  fi
elif [ $1 == "stopall" ]; then
  killall VBoxHeadless
fi
