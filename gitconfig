[user]
	name = David White
	email = david.white@spry-soft.com

[push]
	default = current

[alias]
	a    = add
	co   = checkout
	br   = branch
	com  = commit
	st   = status
	cob  = checkout -b
	corb = !sh -c 'git checkout -b $1 origin/$1' -
	com  = checkout master
	lg   = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --
  discard = !sh -c ' git clean -df && git checkout -- .'

[core]
	autocrlf = input
	filemode = false
	excludesfile = ~/.gitignore
	editor = vim

[color]
	diff = always
	ui = auto

[credential]
	helper = osxkeychain
[init]
	templatedir = ~/.git_template
