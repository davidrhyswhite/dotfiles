[user]
	name = David White
	email = david.white@spry-soft.com
  github = davidrhyswhite

[push]
	default = current

[alias]
	i       = init
	a       = add
	df      = diff
	co      = checkout
	br      = branch
	com     = commit
	st      = status
  ps      = push
  pl      = pull
  pf      = push --force-with-lease
  prune   = fetch --prune
	cob     = checkout -b
	corb    = !sh -c 'git checkout -b $1 origin/$1' -
	com     = checkout master
	fo      = fetch origin
	lg      = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --
  discard = !sh -c ' git clean -df && git checkout -- .'

[core]
	autocrlf           = input
	filemode           = false
	excludesfile       = ~/.gitignore
	editor             = vim

[status]
  showUntrackedFiles = all

[color]
	diff = always
	ui = auto

[credential]
	helper = osxkeychain
[init]
	templatedir = ~/.git_template
