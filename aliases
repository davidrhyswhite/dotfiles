# Unix
alias mkdir='mkdir -p'
alias l='ls'
alias ll='ls -Alh'
alias rmd='rm -rf'
alias cl='clear'
alias e='$EDITOR'
alias v='$VISUAL'

# Make
alias m='make'

# Bundler
alias b='bundle'

# Ruby / Rails
alias r='rails'
alias rk='rake'
alias rs='rspec'

# Git
alias git='hub'
alias g='git'

# Bower
alias bow='bower install'
alias bows='bower install --save'

# Node / NPM
alias n='node'
alias npmg='npm install --global'
alias npms='npm install --save'
alias npmsd='npm install --save-dev'
