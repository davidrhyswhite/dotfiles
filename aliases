# Unix
alias mkdir='mkdir -p'
alias l='ls -a'
alias ll='ls -Alh'
alias rmd='rm -rf'
alias c='clear'
alias e='$EDITOR'
alias v='$VISUAL'

# Make
alias m='make'

# Bundler
alias b='bundle'

# Ruby / Rails
alias r='rails'
alias rk='rake'
alias rs='rspec'

# Git
alias git='hub'
alias g='git'
alias s='g status'

# Bower
alias bow='bower install'
alias bows='bower install --save'

# Node / NPM
alias n='npm'
alias npmg='npm install --global'
alias npms='npm install --save'
alias npmsd='npm install --save-dev'
alias y='yarn'

# Docker
alias d='docker'
alias dc='docker-compose'

# Common mistypes
alias gut='git'
alias car='cat'

alias sky='cd ~/Projects/sky'
