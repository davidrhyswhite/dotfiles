# Unix
alias mkdir='mkdir -p'
alias cs='cd'
alias l='ls -a'
alias ll='ls -Alh'
alias rmd='rm -rf'
alias c='clear'
alias e='$EDITOR'
alias v='$VISUAL'
alias lua='/usr/local/Cellar/lua@5.1/5.1.5_8/bin/lua-5.1'

# Make
alias m='make'

# Bundler
alias b='bundle'

# Ruby / Rails
alias r='rails'
alias rk='rake'
alias rs='rspec'

# Git
alias git='hub'
alias g='git'
alias s='g status'

# Bower
alias bow='bower install'
alias bows='bower install --save'

# Node / NPM
alias n='npm'
alias npmg='npm install --global'
alias npms='npm install --save'
alias npmsd='npm install --save-dev'
alias y='yarn'
alias yr='yarn run'
alias p='pnpm'
# Docker
alias d='docker'
alias dc='docker-compose'
alias docker-clean-images='docker rmi $(docker images -a --filter=dangling=true -q)'
alias docker-clean-ps='docker rm $(docker ps --filter=status=exited --filter=status=created -q)'

# Common mistypes
alias gut='git'
alias car='cat'

alias sky='cd ~/Projects/sky'
